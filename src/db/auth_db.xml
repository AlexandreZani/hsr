<?xml version="1.0" encoding="UTF-8"?>
<MySQLDB name="HSRAuthDB">
  <table name="Users">
    <field name="UserID" signed="false" type="INT" unique="true" indexed="false" autoincrement="true" />
    <field name="Username" type="VARCHAR(255)" unique="true" indexed="true" />
    <field name="Salt" type="VARCHAR(255)" />
    <field name="PasswordHash" type="VARCHAR(255)" desc="sha1(Salt + User password)" />
  </table>

  <table name="Sessions">
    <field name="UserID" signed="false" type="INT" indexed="true" />
    <field name="SessionID" type="VARCHAR(255)" indexed="true" />
    <field name="CreationTime" signed="false" type="INT" />
    <field name="LastTouched" signed="false" type="INT" />
  </table>
</MySQLDB>
